@model EventsWebApp.Models.LocalPasswordModel

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        
        <div class="form-group">
  <label class="col-md-4 control-label" for="OldPassword">@Resource.Resource.currentPassword</label>
  <div class="col-md-6">
    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control input-md", @required = ""})
  </div>
</div>

<!-- Password input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="NewPassword">@Resource.Resource.newPassword</label>
  <div class="col-md-6">
    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control input-md", @required = ""})
  </div>
</div>

<!-- Password input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="ConfirmPassword">@Resource.Resource.confirnNewPassword</label>
  <div class="col-md-6">
    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-md", @required = ""})
  </div>
</div>

<!-- Button -->
<div class="form-group">
  
  <div class="col-md-4 col-md-offset-4">
       <input type="submit" value=@Resource.Resource.changePassword class="btn btn-primary" />
  </div>
</div>
    </fieldset>
}


