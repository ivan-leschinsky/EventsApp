@model IEnumerable<EventsWebApp.Models.UserProfile>

@{
    ViewBag.Title = "Пользователи";
}

<table class="table ">
    <tr>
        <th></th>
        <th>
            ID
        </th>
        <th>
            UserName
        </th>
        <th>
            UserTrueName
        </th>
        <th>
            UserInfo
        </th>
        <th>
            UserAvatarUrl
        </th>
        <th>
            Подписки
        </th>
       
        <th>
            Subjects
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.UserId }) |
            @Html.ActionLink("Показать", "Show", new { id=item.UserId })
        </td>
        <td>
			@item.UserId
        </td>
        <td>
			@item.UserName
        </td>
        <td>
			@item.UserTrueName
        </td>
        <td>
			@item.UserInfo
        </td>
        <td>
			@item.UserAvatarUrl
        </td>
        <td>
			@((item.Events == null || item.Events.Count==0) ? "None" : item.Events.Count.ToString())
        </td>
        <td>
			@((item.Subjects == null || item.Subjects.Split(',').First().Equals("None")) ? "None" : item.Subjects)
        </td>
    </tr>
}

</table>


